{% extends "authentication/base.html" %}

{% from 'base/macros.html' import input_horizontal %}
{% block content %}

:css
  .password_recovery__control_group__bare_bottom {
    margin-bottom: 0px;
  }
  .password_recovery__ul_inline__inline_block {
    width: 220px;
    display: inline-block
  }
  .password_recovery__inline_li__bare_padding {
    padding-left: 0px;
  }
  
.row(ng-app)
  .offset3.span6
    %form.form-horizontal(action='.' method='POST')
      .control-group
        .controls
          %h4 Recover Password
      {{ input_horizontal(form.identifier, "a") }}
      %div(class='control-group{% if form.kind.errors %} error{% endif %} password_recovery__control_group__bare_bottom')
        .controls
          %ul.inline.password_recovery__ul_inline__inline_block
            {% for subfield in form.kind %}
            %li.password_recovery__inline_li__bare_padding
              %label.radio
                %input(id="{{ subfield.id }}" type="radio" name="{{ subfield.name }}" value="{{ subfield.data }}" ng-disabled="!a")
                {{ subfield.label.text }}
            {% endfor %}
          {% if form.kind.errors %}
          %span.help-inline
            {% for x in form.kind.errors %}
            {% if not loop.first %}
            %br
            {% endif %}
            {{ x }}
            {% endfor %}
          {% endif %}
      .control-group
        .controls
          %button.btn(type='submit') Recover
          &nbsp;::&nbsp;
          %a(href="{{ url_for('.login') }}") login
{% endblock %}
