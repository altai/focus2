{% extends "authentication/base.html" %}


{% block content %}
{% from 'base/macros.html' import input_horizontal %}
.row
  .offset3.span6
    %form.form-horizontal(action='.' method='POST')
      {{ form.hidden_tag() }}
      .control-group
        .controls
          %h4 Choose new password
      {{ input_horizontal(form.password) }}
      {{ input_horizontal(form.confirm_password) }}
      .control-group
        .controls
          %button.btn(type='submit') Send
{% endblock %}
